<li>
    <p>    
        <%=i.content%> <br>
        - <%=i.user.name%>
        <% if(locals.user && locals.user.id == i.user.id) {%>
            <a href="/posts/destroy/<%=i.id%>"> - Delete Post</a>
            <%}%>
        <%if(locals.user){%>
        <form action='comments/create' id="new-comment-form" method="post">
            <textarea name="content" cols="20" rows="1" placeholder="Add a Comment...." required></textarea>
            <input type="hidden" name="post" value="<%=i._id%>">
            <input type="submit" value="Comment">
        </form>
        <%}%>
        <div id="comment-div-container">
            <%let count=1%>
            <ul>
                <%for(let j of i.comments){%>

                    <%- include('_comments',{j:j,count:count}) -%>
                <%}%>
            </ul>
           
        </div>
        
    </p>
   
</li>